<div id="container">

	<%= form_tag('/client', :method => "post", :class => "formNewUser")%>
  <p>
		<!--<label>CPF:</label>-->
		<%= text_field_tag :cpf, nil, :placeholder => "CPF", :class=> "form-control", :required => "required" %>
	</p>

  <p>
		<!--<label>Nome completo:</label>-->
		<%= text_field_tag :name, nil, :placeholder => "Nome", :class=> "form-control", :required => "required"%>
  </p>

  <p>
		<!--<label>Data de nascimento:</label>-->
		<%= text_field_tag :dob, nil, :placeholder => "Data de nascimento", :class=> "form-control", :required => "required"%>
  </p>  
  
  <p>
		<!--<label>RG:</label>-->
		<%= text_field_tag :rg, nil, :placeholder => "RG", :class=> "form-control", :required => "required"%><br />
   </p> 
  
  <p>
		<!--<label>Telefone:</label>-->
		<%= text_field_tag :phone, nil, :placeholder => "Telefone", :class=> "form-control", :required => "required"%>
  </p>
  
  <p>
		<!--<label>CEP:</label>-->
		<%= text_field_tag :cep, nil, :placeholder => "CEP", :class=> "form-control", :required => "required"%>
  </p>

  <p>
		<!--<label>Nº:</label>-->
		<%= text_field_tag :number, nil, :placeholder => "N° da casa ou apto.", :class=> "form-control", :required => "required"%>
  </p>
  <p>
	 <%= submit_tag "Gravar", :class=>"btn btn-lg btn-primary btn-block"%>
  </p>
</div>