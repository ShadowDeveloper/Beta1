<div class="row"><h2 class="sub-header">Informações Pessoais</h2></div>

<div  class="table-responsive">
  <table class="table table-striped">
    <tbody>
      <tr>
        <td><b>CPF:</b></td>
        <td><%= @client.cpf %></td>
      </tr>
      <tr>
        <td><b>Nome:</b></td>
        <td><%= @client.name.capitalize %></td>
      </tr>  
      <tr>
        <td><b>Data de Nascimento:</b></td>
        <td><%= @client.dob %></td>
      </tr>
      <tr>
        <td><b>RG:</b></td>
        <td><%= @client.rg %></td>
      </tr>
      <tr>
        <td><b>Telefone:</b></td>
        <td><%= @client.phone_number %></td>
      </tr>
      <tr>
        <td><b>Estado Civil:</b></td>
        <td><%= @client.relationship %></td>
      </tr>                        
      <tr>
        <td><b>E-mail:</b></td>
        <td><%= @client.email_address %></td>
      </tr>                        
      <tr>
        <td><b>Celular:</b></td>
        <td><%= @client.mobile_number %></td>
      </tr>                        
    </tbody>    
  </table>
</div>

<div class="row"><h2 class="sub-header">Informações Residenciais</h2></div>
<div  class="table-responsive">
  <table class="table table-striped">
    <tbody>
      <tr>
        <td><b>CEP:</b></td>
        <td><%= @client.address %></td>
      </tr>              
    </tbody>    
  </table>
</div>

<div class="row"><h2 class="sub-header">Informações Profissionais</h2></div>
<div  class="table-responsive">
  <table class="table table-striped">
    <tbody>
      <tr>
        <td><b>Salário:</b></td>
        <td><%= @client.company.income %></td>
      </tr>    
      <tr>
        <td><b>Profissão:</b></td>
        <td><%= @client.company.ocupation.capitalize %></td>
      </tr>    
      <tr>
        <td><b>Empresa:</b></td>
        <td><%= @client.company.company_name.capitalize %></td>
      </tr>              
    </tbody>    
  </table>
</div>


<div class="row"><h2 class="sub-header">Dados Bancários</h2></div>
<div  class="table-responsive">
  <table class="table table-striped">
    <tbody>
    	<%  @client.bank_account.each do |bank|%>
      <tr>
        <td><b>Banco:</b></td>
        <td><%= bank.bank_id %></td>
      </tr>    
      <tr>
        <td><b>Agencia:</b></td>
        <td><%= bank.agency %></td>
      </tr>    
      <tr>
        <td><b>Conta Corrente:</b></td>
        <td><%= bank.account_number %></td>
      </tr>
     <% end %>            
    </tbody>    
  </table>
</div>
