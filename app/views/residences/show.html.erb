<span>Dados do Imóvel</span>
<div class="panel">
	<ul class="infosClient">
		<li><b>Status: </b><%= @residence.status_name %></li>
		<li><b>Tipo: </b><%= @residence.type_name %></li>
	</ul>
</div>

<span>Dados de Localização</span>
<div class="panel">
	<ul class="infosClient">
		<li><b>CEP: </b><%= @residence.cep %></li>
		<li><b>Endereço: </b><%= "#{@residence.street}, #{@residence.number}" %></li>
		<li><b>Bairro: </b><%= "#{@residence.neighbourhood}" %></li>
		<li><b>Estado: </b><%= "#{@residence.state}" %></li>
		<li><b>Cidade: </b><%= "#{@residence.city}" %></li>
	</ul>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="col-lg-7 center-block" style="float:none;">
      <div id="basic_map"></div>   
    </div>    
  </div>
</div>

<div class="large-12 columns">
  
</div>


<script>
handler = Gmaps.build('Google');
handler.buildMap({
    provider: {
      disableDefaultUI: true
      // pass in other Google Maps API options here
    },
    internal: {
      id: 'basic_map'
    }
  },
  function(){
    markers = handler.addMarkers([
      {
        "lat": "<%= @residence.geo[:lat] %>",
        "lng": "<%= @residence.geo[:lng] %>",
        "picture": {
          "url": "/assets/housemaps.png",
          "width":  46,
          "height": 46
        },
        "infowindow": "<%= @residence.status%>"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  }
);
