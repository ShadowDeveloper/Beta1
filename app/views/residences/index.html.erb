<%= form_tag("/residences", method: "get") do %>
  <div class="row">
    <div class="col-lg-12">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-body">        
            <div class="col-lg-4">
              <div class="form-group">         
               <label>Status do Imóvel *</label>
                  <select id="residence_status" class="form-control req" name="residence_status">
                   <option value="">Selecione</option>
                   <!--<option value="1">Compra</option>--> 
                   <option value="3">A Venda</option>
                   <option value="2">Vendido</option>
                </select>
              </div>
              <%= submit_tag "Buscar",  :class=>"btn btn-success col-lg-3 pull-right"%>
            </div>
          </div>
        </div>
      </div>
<%end%>

  
<%  if @residence_geo != []%>
  <%= render "search", residence_geo: @residence_geo %>
<%end%>

