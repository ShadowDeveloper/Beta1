<%= form_for @residence, :html => {method: "PUT", :multipart => true } do |form| %>
  
  <div class="form-group">
  	<%= form.file_field :pics, :class => "col-lg-12 pull-left form-control" %>
  </div>

  <div class="form-group">
   <%= form.submit "Cadastrar imagem", :class => "btn btn-success col-lg-3 pull-right" %>
  </div>
  
<% end %>