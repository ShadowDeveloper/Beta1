<%= form_for @residence, :html => {method: "PUT", :multipart => true } do |form| %>

	<div class="form-group">
		<%= form.file_field :pics, id: 'pics_file_field', style: "display:none", required: true%>
	</div>

  <div class="form-group">
  <img src="/assets/green-camera-icon.png" style="margin-top: -7px;" onclick="openUpload()"/>
  	 <%= form.submit "Cadastrar imagem", :class => "btn btn-success col-lg-4 pull-right" %>
  </div>
  
<% end %>

<script>
function openUpload(){
	$("#pics_file_field").click();
}
</script>