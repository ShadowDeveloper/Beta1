<div id="row text-center">

  <%= form_tag("/users/list", method: "get",  :class => "formNewUser") do %>
    <div class="row text-center">
      <label>Login</label>
      <input type="text" id="search" name="search" class="form-control small-5 columns"/><br>
      <%= submit_tag "Buscar",  :class=>"button right"%>
    </div>
  <%end%>

  <%if !@user.empty?%>
    <%= render "search"%>
  <%end%>
</div>

<script>
  $( "#search_by" ).change(function() {
    if( $("#search_by").val() == "cpf") {
      $('#search').mask('000.000.000-00');
    } else {
      $('#search').val("");
      $('#search').unmask();
    }
      
  });
  
</script>

<style>#search_by, #search{margin: 20px auto !important; float: none;  width: 50%;}</style>