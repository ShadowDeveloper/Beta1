<%= form_for(@user, url: "/users", :class => "formNewUser", remote: true) do |f| %>
		

    <%= text_box("Login",(f.text_field :login, placeholder: "Ex: Tester", :class=> "form-control", :required => "required")) %>
    <%= text_box("Nome",(f.text_field :name, placeholder: "Ex: Ramires", :class=> "form-control", :required => "required")) %>
    <%= text_box("CPF",(f.text_field :cpf, placeholder: "Ex: 333.333.333-55", :class=> "form-control cpf", :required => "required")) %>
    <%= text_box("Senha",(f.password_field :password, placeholder: "Ex: Qbz12Tr", :class=> "form-control", :required => "required")) %>

		<div class="row">
      <div class="small-2 columns">
      <%= check_box_tag :adm, nil,nil,:style => "float:right; margin:5px 0 0 0;" %>
      <label style="float:right; margin:0 5px 0 0; font-size: 14px; font-weight: bold; color:#000">Administrador</label>
      </div>  
      <div class="small-10 columns">
        <%= f.submit "Gravar", :class=>"button right buttonColor"%>
      </div>
    </div>

    <div id="status" name="status"></div>

<% end %>


<style>label{font-size: 20px;color: rgb(54, 54, 177);text-align: left;}</style>