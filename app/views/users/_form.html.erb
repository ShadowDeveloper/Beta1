
<%= form_for(@user, url: "/users", :class => "formNewUser", remote: true) do |f| %>	
<div class="row">
  <div class="col-lg-12">
        <div id="residence_information " class="col-lg-6 center-block" style="float:none;">
          <div class="panel panel-default">
            <div class="panel-heading"><strong>Dados do Usu√°rio</strong></div>
              <div class="panel-body">
                <%= text_box("Login",(f.text_field :login, placeholder: "Ex: Tester", :class=> "form-control")) %>
                <%= text_box("Nome",(f.text_field :name, placeholder: "Ex: Ramires", :class=> "form-control")) %>
                <%= text_box("CPF",(f.text_field :cpf, placeholder: "Ex: 333.333.333-55", :class=> "form-control cpf")) %>
                <%= text_box("Senha",(f.password_field :password, placeholder: "Ex: Qbz12Tr", :class=> "form-control")) %>
                <div class="checkbox">
                    <label>
                      <%= check_box_tag :adm, nil,nil %> Administrador
                    </label>
                </div>                
                <div class="form-group"><%= f.submit "Cadastrar", :class=> "btn btn-success col-lg-3 pull-right" %></div>
              </div>
          </div>
        </div>                

  </div>
</div>    
    
    <div id="status" name="status"></div>
<% end %>