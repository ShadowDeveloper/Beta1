<div class="col-lg-6 center-block" style="float:none;">
	<div class="panel panel-default">
		<div class="table-responsive">
		  <table class="table table-striped">
		  	<thead>
		  		<th>Login</th>
		      <th>Nome</th>
		  	</thead>
		    <tbody>
		    	<% @user.each  do |user| %>
			      <tr>
			        <td><a href="/users/<%= user.id %>"><%= user.login %></a></td>
			        <td><%= user.name.upcase %></td>
			      </tr>
		      <% end %>
		    </tbody>    
		  </table>
		</div>
	</div>	
</div>