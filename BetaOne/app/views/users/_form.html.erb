<%= form_for(@user, url: "/users", :class => "formNewUser", remote: true) do |f| %>
		
    <p>
      <label>Login</label>
		  <%= f.text_field :login, :placeholder => "Login", :class=> "form-control", :required => "required" %>
    </p>

    <p>
  		<label>Nome</label>
  		<%= f.text_field :name,  :placeholder => "Nome", :class=> "form-control", :required => "required"%>
    </p>

    <p>      
		  <label>CPF</label>
		  <%= f.text_field :cpf, :placeholder => "CPF", :class=> "form-control cpf", :required => "required"%>
    </p>

    <p>
      <label>Senha</label>
		  <%= f.password_field :password, :placeholder => "Senha", :class=> "form-control", :required => "required"%>
    </p>
		
		<%= check_box_tag :adm %> <label style="float:left; margin-right:5px;">Administrador</label>

		<%= f.submit "Gravar", :class=>"button right buttonColor"%>
    <div id="status" name="status">
    </div>

<% end %>