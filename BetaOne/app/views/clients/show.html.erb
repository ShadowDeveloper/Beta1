<div id="container">

	<br><br>
	<center>
		CPF: <%= @client.cpf %><br />
		Nome: <%= @client.name %><br />
		Data de Nascimento: <%= @client.dob %><br />
		RG: <%= @client.rg %><br />
		Telefone: <%= @client.phone_number %><br />
		Endereço: <%= @client.address %><br />
	</center>
	<br><br>

	<center>
		<b>Novo Imóvel</b>
		<%= form_for Residence.new, url: "/residences", name: "residence" do |res| %>
			<%=  res.text_field :address, placeholder: "Endereço"%><br />
			<%= submit_tag "Gravar"%>
		<%end%>
	</center>

</div>

