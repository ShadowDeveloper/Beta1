<div id="container">

  <%= form_tag("/clients/list", method: "get",  :class => "formNewUser") do %>
  <p>
    <label>Buscar Por:</label>
    <select name="search_by">
     <option value="last">Ultimos</option>
     <option value="cpf">CPF</option>
     <option value="nome">Nome</option>
    </select>
  </p>  
    <input type="text" name="search" class="form-control"/><br>
    <%= submit_tag "Buscar",  :class=>"button right"%>
  <%end%>


    <table style="width:300px">
    <tr>
      <th>CPF</th>
      <th>NOME</th> 
    </tr>
  <% @clients.each  do |client| %>
<tr>
  <td><a href="/clients/<%=client.id%>"><%= client.cpf %></a></td>
  <td><%= client.name.upcase %></td>
</tr>
  <% end %>
</table>
</div>