	<%= stylesheet_link_tag 'main', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'vendor/modernizr' %>
    
<div class="row">
	<div id="containerLogin" class="large-12 text-center panel columns">
		<h3>Bem Vindo !</h3>
			<%= form_tag("/session/login", :method => "POST") do%>
			<div class="row">
			    <div class="small-8">
			      <div class="row">
			        <div class="small-3 columns">
			          <label for="right-label" class="right inline">Login</label>
			        </div>
			        <div class="small-9 columns">
			          <input type="text" name="user_name" id="right-label" required autofocus placeholder="Usuário">
			        </div>
			      </div>
				<div class="row">
			        <div class="small-3 columns">
			          <label for="right-label" class="right inline">Senha:</label>
			        </div>
			        <div class="small-9 columns">
			          <input type="password" name="password" required placeholder="SENHA">
			        </div>
			      </div>			      
			    </div>
			  </div>			
										
				<% if flash[:error]%>
				<div id="errorPassword">
					<p>
						Os dados digitados estão incorretos. Tente novamente!
					</p>
				</div>
				<% end %>
				<%= submit_tag "Entrar", :class => "button right"%>
			<%end%>
	</div>
</div>
